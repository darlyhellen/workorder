<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/tvcampreciew"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/tvcamgallery_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.47" >

        <LinearLayout
            android:id="@+id/tvcamlinearlayout_images"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="@dimen/layoutSize50"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/camera_back"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/tvcamok"
            android:layout_width="@dimen/layoutSize50"
            android:layout_height="@dimen/layoutSize50"
            android:layout_centerVertical="true"
            android:background="@drawable/publish_click_selector"
            android:gravity="center"
            android:padding="@dimen/margin_padding10"
            android:text="@string/ok"
            android:textColor="@color/color666666" />

        <ImageView
            android:id="@+id/tvcamtakepic"
            android:layout_width="@dimen/layoutSize40"
            android:layout_height="@dimen/layoutSize40"
            android:layout_below="@id/tvcamok"
            android:layout_marginTop="@dimen/margin_padding30"
            android:layout_marginBottom="@dimen/margin_padding30"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/camera_selector" />

        <Button
            android:id="@+id/tvcamexit"
            android:layout_width="@dimen/layoutSize50"
            android:layout_height="@dimen/layoutSize50"
            android:layout_below="@id/tvcamtakepic"
            android:layout_centerVertical="true"
            android:background="@drawable/publish_click_selector"
            android:gravity="center"
            android:padding="@dimen/margin_padding10"
            android:text="@string/cancel"
            android:textColor="@color/color666666"/>
    </RelativeLayout>

</RelativeLayout>