<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--首页内容-->

    <com.xiangxun.workorder.widget.header.HeaderView
        android:id="@+id/id_maintenance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/id_maintenance_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding10"
        android:src="@mipmap/ic_maintenance_background_1"
        android:visibility="visible" />


    <TextView
        android:id="@+id/id_maintenance_username"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_padding10"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/textSize16" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding5"
        android:background="@color/divider" />

    <GridView
        android:id="@+id/id_maintenance_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:horizontalSpacing="@dimen/margin_padding2"
        android:listSelector="@color/transparent_white"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/margin_padding2" />

</LinearLayout>
