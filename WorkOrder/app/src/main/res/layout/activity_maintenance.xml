<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--首页内容-->

    <com.xiangxun.workorder.widget.header.HeaderView
        android:id="@+id/id_maintenance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/id_maintenance_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding10"
        android:src="@mipmap/ic_launcher"
        android:visibility="visible" />


    <TextView
        android:id="@+id/id_maintenance_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:layout_marginBottom="@dimen/margin_padding10"
        android:textSize="@dimen/textSize20" />

    <ViewFlipper
        android:id="@+id/id_maintenance_flipper"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="@dimen/margin_padding20"
        android:layout_marginLeft="@dimen/margin_padding10"
        android:layout_marginRight="@dimen/margin_padding10"
        android:autoStart="true"
        android:background="@drawable/app_login_flipper_shape"
        android:flipInterval="5000"
        android:inAnimation="@anim/anim_in"
        android:outAnimation="@anim/anim_out" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/id_maintenance_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_maintenance_order" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_maintenance_order" />

        </TableRow>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_equip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_maintenance_order" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_notifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_maintenance_order" />

        </TableRow>


    </LinearLayout>

</LinearLayout>
