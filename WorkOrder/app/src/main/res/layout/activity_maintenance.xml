<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_save_btn_color_disable"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--首页内容-->

    <com.xiangxun.workorder.widget.header.HeaderView
        android:id="@+id/id_maintenance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/id_maintenance_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding5"
        android:background="@color/white" />


    <ViewFlipper
        android:id="@+id/id_maintenance_flipper"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="@dimen/margin_padding1"
        android:layout_marginTop="@dimen/margin_padding1"
        android:autoStart="true"
        android:background="@color/white"
        android:flipInterval="3000"
        android:inAnimation="@anim/anim_in"
        android:outAnimation="@anim/anim_out"
        android:paddingLeft="@dimen/margin_padding10"
        android:paddingRight="@dimen/margin_padding10" />
    <!--android:background="@drawable/app_login_flipper_shape"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/id_maintenance_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_equip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.xiangxun.workorder.widget.grid.XwHomeModeButton
                android:id="@+id/id_maintenance_notifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>


    </LinearLayout>

</LinearLayout>
