<?xml version="1.0" encoding="utf-8"?>
<com.xiangxun.workorder.widget.coupon.CouponDisplayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_tv_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/id_tv_supplier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_padding5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/textSize16" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/chart_value_3" />

    <TextView
        android:id="@+id/id_tv_supplier_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding5"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/textSize14" />

    <TextView
        android:id="@+id/id_tv_supplier_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding5"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/textSize14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_appraise_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_orange"
            android:padding="@dimen/margin_padding5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/id_tv_appraise_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14" />
    </RelativeLayout>


</com.xiangxun.workorder.widget.coupon.CouponDisplayView>
