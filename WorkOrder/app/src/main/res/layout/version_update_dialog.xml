<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zyh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_call_background"
    android:orientation="vertical"
    android:padding="1dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/publish_select_dialog_title_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/id_version_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize17" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#c8c8c8" />

    <com.xiangxun.workorder.widget.dialog.MultithreadProgressBar
        android:id="@+id/id_version_update_multithread_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_login_text_shape"
        android:paddingBottom="@dimen/margin_padding10"
        android:paddingTop="@dimen/margin_padding10"
        zyh:progress_reached_color="@color/edit_save_btn_color_disable"
        zyh:progress_text_color="@color/text_color"
        zyh:progress_unreached_color="@color/wel_back_color" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/id_version_update_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_app_selecter"
            android:text="暂停" />

        <Button
            android:id="@+id/id_version_update_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_app_selecter"
            android:text="继续" />

        <Button
            android:id="@+id/id_version_update_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_app_selecter"
            android:text="暂不更新" />

    </TableRow>

</LinearLayout>