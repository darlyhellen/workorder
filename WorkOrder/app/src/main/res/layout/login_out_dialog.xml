<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_call_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/out_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/wel_text"
        android:textSize="@dimen/textview_large" />

    <View
        android:id="@+id/out_dialog_title_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/wel_back_color" />

    <TextView
        android:id="@+id/out_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/layoutSize20"
        android:paddingLeft="@dimen/margin_padding10"
        android:paddingRight="@dimen/margin_padding10"
        android:paddingTop="@dimen/layoutSize20"
        android:textColor="@color/wel_text"
        android:textSize="@dimen/textview_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/wel_back_color" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/out_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/wel_text"
            android:textSize="@dimen/textview_normal" />

        <View
            android:id="@+id/out_dialog_cancel_line"
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/wel_back_color" />

        <Button
            android:id="@+id/out_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/wel_text"
            android:textSize="@dimen/textview_normal" />
    </TableRow>

</LinearLayout>