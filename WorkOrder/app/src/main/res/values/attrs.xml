<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="pathColor" format="color" />
        <attr name="pathBorder" format="dimension" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>
    <!-- 新版本下的参数集合 -->
    <declare-styleable name="BubbleStyle">

        <!-- 填充颜色 -->
        <attr name="darly_fillColor" format="reference|color" />
        <!-- 填充的边框距离 -->
        <attr name="darly_fillPadding" format="dimension" />
        <!-- 箭头 -->
        <attr name="darly_arrowTo" format="reference" />
        <!-- 箭头方向 -->
        <attr name="darly_arrowDirection" format="enum">
            <enum name="None" value="0" />
            <enum name="Left" value="1" />
            <enum name="Up" value="2" />
            <enum name="Right" value="3" />
            <enum name="Down" value="4" />
        </attr>
        <!-- 箭头高度 -->
        <attr name="darly_arrowHeight" format="dimension" />
        <!-- 箭头宽度 -->
        <attr name="darly_arrowWidth" format="dimension" />
        <!-- 箭头偏移 -->
        <attr name="darly_arrowOffset" format="dimension" />
        <!-- 布局的弧度 -->
        <attr name="darly_cornerRadius" format="dimension" />
        <!-- 左上角弧度 -->
        <attr name="darly_cornerTopLeftRadius" format="dimension" />
        <!-- 右上角弧度 -->
        <attr name="darly_cornerTopRightRadius" format="dimension" />
        <!-- 左下角弧度 -->
        <attr name="darly_cornerBottomLeftRadius" format="dimension" />
        <!-- 右下角弧度 -->
        <attr name="darly_cornerBottomRightRadius" format="dimension" />
        <!-- 边框外线宽度 -->
        <attr name="darly_borderWidth" format="dimension" />
        <!-- 边框外线颜色 -->
        <attr name="darly_borderColor" format="reference|color" />
    </declare-styleable>
    <!--环形加载项-->
    <declare-styleable name="CircleProgress">
        <attr name="color1" format="reference|color"/>
        <attr name="color2" format="reference|color"/>
        <attr name="color3" format="reference|color"/>
    </declare-styleable>



    <declare-styleable name="HorizontalProgressBarWithNumber">
        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />
        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_offset" format="dimension" />
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundProgressBarWidthNumber">
        <attr name="radius" format="dimension" />
    </declare-styleable>

</resources>